@using Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<div class="shadow"></div>
<img alt="" src="/Content/img/backgrounds/kuznica-molot-nakovalnya-1920.jpg"/>


<div class="loginFormWrapper">
    <div class="moitext">
        <h1>ЯМастер</h1>
        <h3>Клуб талантливых и предприимчивых льдей.</h3>
        <h3>Сотни товаров и услуг мастера своего дела предлаганют каждый день.</h3>
        <h2>Смотри, Выбирай, Предлагай</h2>        
    </div>
    <div class="loginForm">
        <h3>Вход</h3>
        @using (Html.BeginForm("Login","Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false)
            @Html.TextBoxFor(model => model.Email, new {placeholder = "E-mail"})
            @Html.PasswordFor(model => model.Password, new {placeholder = "Пароль"})
            <div class="formButtonBlock">
                <button type="submit">Войти</button>
                <a href="@Url.Action("Register","Account")">Регистрация</a>
            </div>
        }
        <p>или используйте свой аккаунт</p>
        <div class="socBlock">
            @using (Html.BeginForm("ExternalLogin", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <button type="submit" id="facebook" name="provider" value="Facebook"><img alt="" src="/Content/img/soclogos/f64.png" /></button>
                <button type="submit" id="google" name="provider" value="Google"><img alt="" src="/Content/img/soclogos/g64.png" /></button>
                <button type="submit" id="vkontacte" name="provider" value="Vkontakte"><img alt="" src="/Content/img/soclogos/v64.png" /></button>
                <button type="submit" id="odnoklassniki" name="provider" value="Odnoklassniki"><img alt="" src="/Content/img/soclogos/o.png" /></button>
                <button type="submit" id="instagram" name="provider" value="Instagram"><img alt="" src="/Content/img/soclogos/i64.png" /></button>
                <button type="submit" id="twitter" name="provider" value="Twitter"><img alt="" src="/Content/img/soclogos/t64.png" /></button>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}