@model Domen.Models.Member

@{
    ViewBag.Title = "Master - "+Model.PersonName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section link
{
    <link href="~/Content/croppie.css" rel="stylesheet" />
    <link href="~/Content/Views/Member.css" rel="stylesheet" />
}
<div id="masterPage" class="masterpageWrapper">
    <div class="masterpageLeftMenuWrapper">
        <div class="imageZone">
            <div class="avatarFree" data-bind="visible:settings.avatar()===null">
                <div class="avaFreeRound">
                    <p>no image</p>
                </div>
            </div>
            <div class="avatarWrapper" style="display: none" data-bind="visible:settings.avatar()">
                <img id="avatar" alt="manfice" data-bind="attr:{src:settings.avatar}"/>
            </div>
            <div class="titleZone">
                <h3 data-bind="text:settings.publicInfo.Nikname">Manfice</h3>
                <h2>ЯМастер</h2>
            </div>
        </div>
        <div class="menuList">
            <ul>
                <li data-bind="click: MasterModel.setView.bind($data, 'orders'), css:{active:MasterModel.isActiveView('orders')}">Заявки
                    <div></div></li>
                <li data-bind="click: MasterModel.setView.bind($data, 'goods'), css:{active:MasterModel.isActiveView('goods')}">Предложения
                    <div></div></li>
                <li data-bind="click: MasterModel.setView.bind($data, 'settings'), css:{active:MasterModel.isActiveView('settings')}">Настройки
                    <div></div></li>
            </ul>
        </div>
    </div>
    <div class="workArea">
        <div class="placeholder" style="display: none" data-bind="visible:MasterModel.isActiveView('orders')">
            @Html.Partial("placeholders/_Orders")
        </div>
        <div style="display: none" data-bind="visible:MasterModel.isActiveView('goods')">
            @Html.Partial("placeholders/_goods")
        </div>
        <div style="display: none" data-bind="visible:MasterModel.isActiveView('settings')">
            @Html.Partial("placeholders/_settings")
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/knockout-3.4.0.js"></script>
    <script src="~/Scripts/croppie.js"></script>
    <script src="~/Scripts/master/MasterClient.js"></script>
    <script src="~/Scripts/master/MasterModel.js"></script>
    <script src="~/Scripts/home/YaMaps.js"></script>
}
